<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="my_recipe_view_search" model="ir.ui.view">
        <field name="name">my.recipe.view.search</field>
        <field name="model">my.recipe</field>
        <field name="arch" type="xml">
            <search>
                <field name="recipe_name"/>
            </search>
        </field>
    </record>

    <record id="my_recipe_view_tree" model="ir.ui.view">
        <field name="name">my.recipe.view.tree</field>
        <field name="model">my.recipe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="recipe_name"/>
            </tree>
        </field>
    </record>

    <record id="my_recipe_action" model="ir.actions.act_window">
        <field name="name">My Recipes</field>
        <field name="res_model">my.recipe</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>